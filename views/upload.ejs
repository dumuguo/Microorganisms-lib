<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>微生物数据库 - 数据上传</title>
    <link rel="stylesheet" href="/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <script>
        function handleUpload(event) {
            event.preventDefault();
            const formData = new FormData(event.target);
            
            fetch('/upload', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if(data.success) {
                    alert('上传成功！');
                } else {
                    alert('上传失败：' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('上传过程中发生错误');
            });
        }
    </script>
</head>
<body>
    <header>
        <div class="logo">微生物数据库</div>
        <nav>
            <ul>
                <li><a href="/">首页</a></li>
                <li><a href="/upload" class="active">数据上传</a></li>
                <li><a href="/search">数据查询</a></li>
                <li><a href="/browse">数据浏览</a></li>
            </ul>
        </nav>
    </header>

    <main class="main-container">
        <div class="container">
            <h1 class="page-title">微生物数据上传</h1>
            <h2>导入Excel文件</h2>
            <form onsubmit="handleUpload(event)">
                <input type="file" name="excelFile" accept=".xlsx,.xls" required>
                <button type="submit">上传并导入数据库</button>
            </form>
        </div>
    </main>
</body>
</html>
